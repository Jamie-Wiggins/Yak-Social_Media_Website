<div class="container">
    <%= form_tag request_contact_path, mehtod: 'post' do %>
        <%= label_tag :name, t('.name') %>
        <%= text_field_tag :name, t('.enter_name') %>
        <%= label_tag :email, t('.email') %>
        <%= email_field_tag :email, t('.enter_email') %>
        <%= label_tag :message, t('.message') %>
        <%= text_field_tag :message, t('.enter_message'), size: 100%>
        <%= submit_tag t('.submit') %>
    <% end %>
</div>