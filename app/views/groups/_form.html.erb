<%# A form for groups where user name and image can be submitted %>
<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      <%# send through a hidden field for admin id as current user id to make an admin for the group%>
      <%= f.hidden_field :admin_id, :value => current_user.id %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.file_field :image, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-info' %>
<% end %>